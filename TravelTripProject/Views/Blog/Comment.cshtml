<div class="content-form">
<h3>Bir Yorum Yapın</h3>

<form method="post">
    <input type="hidden" placeholder="Id" name="BlogId" value="@ViewBag.value" required />
    <input type="text" placeholder="Kullanıcı Adı" name="UserName" required />
    <input type="text" placeholder="E-Mail" name="Mail" required />
    <textarea placeholder="Yorum" name="Comments"></textarea>
    <input type="submit" value="Gönder" />
</form>
</div>
