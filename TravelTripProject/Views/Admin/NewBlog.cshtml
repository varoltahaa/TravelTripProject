@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "NewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
<form class="form-group" method="post">
    <div>
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.History)
        @Html.TextBoxFor(x => x.History, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.BlokImage)
        @Html.TextBoxFor(x => x.BlokImage, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Explanation)
        @Html.TextAreaFor(x => x.Explanation, 15, 1, new { @class = "form-control" })
        <br />
    </div>

    <div>
        <button class="btn btn-primary" onclick="alert('Blog Eklendi...!')">Blog Ekle</button>
    </div>

</form>

